model CustomerTier {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  discount  Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products  ProductPrice[]

  @@map("customer_tiers")
}

model Product {
  id          String   @id @default(cuid())
  sku         String   @unique
  name        String
  description String?
  basePrice   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  prices      ProductPrice[]

  @@map("products")
}

model ProductPrice {
  id        String   @id @default(cuid())
  productId String
  tierId    String
  price     Float

  product   Product     @relation(fields: [productId], references: [id])
  tier      CustomerTier @relation(fields: [tierId], references: [id])

  @@unique([productId, tierId])
  @@map("product_prices")
}
