generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  firstName String?
  lastName  String?
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  company   String?
  tier      String   @default("basic")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("customers")
}

model CustomerTier {
  id              String         @id @default(cuid())
  code            String         @unique
  name            String
  description     String?
  discountPercent Float          @default(0)
  active          Boolean        @default(true)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  products        ProductPrice[]

  @@map("customer_tiers")
}

model Product {
  id          String         @id @default(cuid())
  sku         String         @unique
  name        String
  description String?
  basePrice   Float    @default(0)
  unit        String?
  isActive    Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  prices      ProductPrice[]

  @@map("products")
}

model ProductPrice {
  id        String       @id @default(cuid())
  productId String
  tierId    String
  price     Float
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  product   Product      @relation(fields: [productId], references: [id])
  tier      CustomerTier @relation(fields: [tierId], references: [id])

  @@unique([productId, tierId])
  @@map("product_prices")
}
